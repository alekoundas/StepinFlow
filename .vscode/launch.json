{
  "configurations": [
    {
      "name": "Debug Electron Main",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "--remote-debugging-port=9222", // Enables Chrome debugging for renderer
        "electron/build/main.js" // Points to your compiled TS (after task)
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build_Electron_TS", // Runs task before launch
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/electron/build/**/*.js"]
    },
    {
      "name": "Attach to Renderer (Chrome)",
      "type": "chrome",
      "request": "attach",
      "port": 9222, // Matches above
      "url": "http://localhost:5173", // Your Vite dev server URL
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true
      // "timeout": 30000 // Give time for Electron to start
    }
  ],
  "compounds": [
    // First run
    // - npm run dev:frontend
    // - Then run debugger (F5)
    // Backend will be started(or not?) by Electons main.ts
    {
      "name": "Debug Full App (Frontend + Backend + Electron)",
      "configurations": ["Debug Electron Main", "Attach to Renderer (Chrome)"]
    }
  ]
}
