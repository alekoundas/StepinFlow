{
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.ts",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && dotnet run",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev2": "concurrently \"npm run dev:frontend\"  \"npm run dev:electron\"",
    "build:frontend": "cd frontend && vite build",
    "build:backend": "cd backend && dotnet publish -c Release -r win-x64 --self-contained -o ../dist-backend",
    "build": "npm run build:frontend && npm run build:backend && electron-builder",
    "install": "cd frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "wait-on": "^9.0.3"
  }
}
