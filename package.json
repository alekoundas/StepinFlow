{
  "name": "stepinflow",
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.ts",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && dotnet run",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev_no_api": "concurrently \"npm run dev:frontend\"  \"npm run dev:electron\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && dotnet publish -c Release -r win-x64 --self-contained true /p:PublishDir=../../dist/backend/ /p:PublishSingleFile=true",
    "build:electron": "tsc --project electron/electron-config.json --outDir dist",
    "build": "npm run clean && npm run build:frontend && npm run build:backend && npm run build:electron",
    "install_full": "npm install &&cd frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "clean": "rimraf dist release"
  },
  "build": {
    "appId": "com.yourname.stepinflow",
    "productName": "StepinFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  }
}
