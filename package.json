{
  "name": "stepinflow",
  "version": "0.1.0-build14",
  "main": "dist/main.js",
  "type": "module",
  "description": "StepinFlow - Workflow automation app",
  "author": "Alex Psihogios todo@mail.com",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend/App && dotnet run",
    "dev:electron-build": "tsc -p electron/electron-config.json --outDir electron/build",
    "dev:electron": "npm run dev:electron-build && wait-on http://localhost:5173 && electron electron/build/main.js",
    "dev": "npm run clean && concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:no-api": "npm run clean && concurrently \"npm run dev:frontend\"  \"npm run dev:electron\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend/App && dotnet publish -c Release -r win-x64 --self-contained true /p:PublishDir=../../dist/backend/ /p:PublishSingleFile=true",
    "build:electron": "tsc --project electron/electron-config.json --outDir ./dist ",
    "build": "npm run clean && npm run build:frontend && npm run build:backend && npm run build:electron && electron-builder",
    "install_full": "npm install &&cd frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "clean": "rimraf dist release electron/build"
  },
  "build": {
    "appId": "com.AlexPs.Stepinflow",
    "productName": "StepinFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/backend/",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}
