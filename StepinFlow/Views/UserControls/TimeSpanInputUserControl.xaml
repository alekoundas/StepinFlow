<UserControl
    x:Class="StepinFlow.Views.UserControls.TimeSpanInputUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:behavior="clr-namespace:StepinFlow.Behavior"
    xmlns:converters="clr-namespace:StepinFlow.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:Model.Enums;assembly=Model"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:icons="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
    xmlns:local="clr-namespace:StepinFlow.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Model.Models;assembly=Model"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TimeInputTextBoxStyle" TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasError}" Value="True">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="BorderThickness" Value="2" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SeparatorTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Main Input Row  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">


            <!--  Hours  -->
            <StackPanel Margin="2" Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Text="Hours" />
                <TextBox
                    x:Name="HoursTextBox"
                    Width="50"
                    MaxLength="2"
                    Text="{Binding ViewModel.Hours, Mode=TwoWay}" />
            </StackPanel>


            <!--  Separator  -->
            <TextBlock Style="{StaticResource SeparatorTextStyle}" Text=":" />


            <!--  Minutes  -->
            <StackPanel Margin="2" Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Text="Minutes" />
                <TextBox
                    x:Name="MinutesTextBox"
                    Width="50"
                    MaxLength="2"
                    Text="{Binding ViewModel.Minutes, Mode=TwoWay}" />
            </StackPanel>


            <!--  Separator  -->
            <TextBlock Style="{StaticResource SeparatorTextStyle}" Text=":" />


            <!--  Seconds  -->
            <StackPanel Margin="2" Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Text="Seconds" />
                <TextBox
                    x:Name="SecondsTextBox"
                    Width="50"
                    MaxLength="2"
                    Text="{Binding ViewModel.Seconds, Mode=TwoWay}" />
            </StackPanel>


            <!--  Separator  -->
            <TextBlock Style="{StaticResource SeparatorTextStyle}" Text="." />


            <!--  Milliseconds  -->
            <StackPanel Margin="2" Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Text="Milliseconds" />
                <TextBox
                    x:Name="MillisecondsTextBox"
                    Width="60"
                    MaxLength="3"
                    Text="{Binding ViewModel.Milliseconds, Mode=TwoWay}" />
            </StackPanel>

        </StackPanel>

        <!--  Action Buttons Row  -->
        <!--<StackPanel
        Grid.Row="1"
        Margin="0,5,0,0"
        HorizontalAlignment="Center"
        Orientation="Horizontal">
        <Button
        Margin="5,0"
        Padding="10,2"
        Command="{Binding ResetCommand}"
        Content="Reset" />
        <Button
        Margin="5,0"
        Padding="10,2"
        Command="{Binding SetCurrentTimeCommand}"
        Content="Current Time" />
        </StackPanel>-->

        <!--  Error Message Row  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            FontSize="11"
            Foreground="Red"
            Text="{Binding ErrorMessage}" />
    </Grid>
</UserControl>